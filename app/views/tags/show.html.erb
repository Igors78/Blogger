<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul><br/>
<% if logged_in? %>
<%= link_to "Delete", tag_path(@tag), class: "internal-link", method: :delete, data: { confirm: "Really delete the tag?" } %><br/><br/>
<% end %>
<%= link_to "<< Back to Articles List", articles_path, class: "internal-link" %><br/>
<%= link_to "<< Back to Tags List", tags_path, class: "internal-link" %><br/>