<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
  <div id="container">
    <div id="content"><br/>
    <p class="flash">
  <%= flash.notice %>
</p>
      <%= yield %>
      <hr>
      <h6>
        <% if logged_in? %>
          <%= "Logged in as #{current_user.email}" %>
          <%= link_to "(Logout)", logout_path, class: "internal-link" %>
        <% else %>
          <%= link_to "(Login)", login_path, class: "internal-link" %>
        <% end %>
      </h6>
    </div>
  </div>
</body>
</html>
